<h3>An order was placed by {{ user }}.</h3>

<b>Order number:</b> {{ ordernumber }}
<br><br>

<b>Items ordered:</b> <br><br>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Model</th>
        <th>Accent</th>
        <th>Color 1</th>
        <th>Color 2</th>
        <th>Color 3</th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    </thead>
    {% set totalprice = 0 %}
    <tbody>
    {% for cart in carts %}
        <tr>
            <td>{{ cart.model }}</td>
            <td>{{ cart.accent }}</td>
            <td>{{ cart.color1 }}</td>
            <td>{{ cart.color2 }}</td>
            <td>{{ cart.color3 }}</td>
            <td>{{ cart.size }}</td>
            <td>{{ cart.quantity }}</td>
            <td>{{ cart.price }}€</td>
        </tr>
        {% set totalprice = totalprice + cart.price %}
    {% endfor %}
    </tbody>
</table>
<br>
<b>Total Price: {{ totalprice }}€</b>




