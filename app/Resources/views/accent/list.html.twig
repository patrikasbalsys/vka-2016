{%  extends 'base.html.twig' %}

{% block body %}


    <a class="btn btn-default" href="{{ path("accent_new") }}">
        <i class="glyphicon glyphicon-plus"></i>New Accent
    </a>

    <br><br>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Model</th>
                <th>Cord Size</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accent in accents %}
            <tr>
                <td>{{ accent.model }}</td>
                <td>{{ accent.cordSize }}</td>
                <td>{{ accent.price }}</td>
                <td>{{ accent.stock }}</td>
                <td>
                    {% if accent.image %}
                        <img src="{{ asset('resources/images/accents/' ~ accent.image) }}" style="width: 50px">
                    {% else %}
                        <img src="{{ asset('resources/images/accents/Default0.jpg') }}" style="width: 50px">
                    {% endif %}
                </td>
                <td class="text-right">
                    <a class="btn btn-danger btn-sm" href="{{ path("accent_delete", {accent: accent.id}) }}">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                    <a class="btn btn-warning btn-sm" href="{{ path("accent_edit", {accent: accent.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}