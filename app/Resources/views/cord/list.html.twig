{%  extends 'base.html.twig' %}

{% block body %}

    <a class="btn btn-default" href="{{ path("cord_new") }}">
        <i class="glyphicon glyphicon-plus"></i>New Cord
    </a>

    <br><br>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Color</th>
            <th>Special</th>
            <th>Size</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
            <th class="text-right">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for cord in cords %}
            <tr>
                <td>{{ cord.color }}</td>
                <td>{{ cord.special }}</td>
                <td>{{ cord.size }}</td>
                <td>{{ cord.price }}</td>
                <td>{{ cord.stock }}</td>
                <td>
                    {% if cord.image %}
                        <img src="{{ asset('resources/images/cords/' ~ cord.image) }}" style="width: 50px">
                    {% else %}
                        <img src="{{ asset('resources/images/cords/Default0.jpg') }}" style="width: 50px">
                    {% endif %}
                </td>
                <td class="text-right">
                    <a class="btn btn-danger btn-sm" href="{{ path("cord_delete", {cord: cord.id}) }}">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                    <a class="btn btn-warning btn-sm" href="{{ path("cord_edit", {cord: cord.id}) }}">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}